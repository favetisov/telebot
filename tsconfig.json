{
      "compilerOptions": {
        "charset": "utf8",
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es2018",
            "dom"
        ],
        "baseUrl": ".",
        "paths": {
          "@src/*": ["./src/*"],
          "@client/*": ["./client/*"]
        },
        "noImplicitAny": false,
        "removeComments": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "esModuleInterop": false,
        "outDir": "dist",
        "noImplicitReturns": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
      "src",
      "client"
    ],
    "exclude": ["node_modules", "**/*.test.ts"]
  }
